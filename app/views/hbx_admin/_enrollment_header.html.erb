<!-- APTC APPLIED PER ENROLLMENT -->

<div class = "module enrollment-header" align = "right">
  <table>
   <head>
    <tr>
      
      <th colspan ="2" style="text-align:center"></a>&nbsp;</span> <b>Plan <br /> Name </b></th>
      <th style="padding:38px;"></th>
      <th>&nbsp;&nbsp;&nbsp;&nbsp;Plan <br /> Premium</th>
      <th style="padding:38px;"></th>
      <th>EHB %</th>
      <th style="padding:38px;"></th>
      <th>Max Applied <br /> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; APTC</th>
      <th style="padding:38px;"></th>
      <th>Applied APTC Ratio &nbsp;&nbsp;</th> 
      <th>
       <span align= "center"><output id = "aptc_applied_pct_<%=hbx_id%>" name="aptc_applied_pct"><%=find_applied_aptc_percent(@current_aptc_applied_hash[hbx_id].to_f, @max_aptc.to_f)%>%</output></span>
        <input id = "applied_pct_<%=hbx_id%>" name='applied_pct_<%=hbx_id%>' type="range" min="0" max="1" step="0.025" value="<%=(@current_aptc_applied_hash[hbx_id].to_f/@max_aptc.to_f)%>" onchange="APTCModule.computeAppliedAPTC('<%=hbx_id%>', this.value, <%=@max_aptc.to_f%>);APTCModule.calculateAvailableAPTC('<%=hbx_id%>')">
      </th>
    </tr> 
    <tr>
      <td colspan = "2" style="text-align:center"><%=HbxEnrollment.find(hbx_id).plan.name%></td>
      <th></th>
      <td style="text-align:center"><%=@plan_premium_for_enrollments[hbx_id]%></td>
      <th></th>
      <td style="text-align:center"><%=ehb_percent_for_enrrollment(hbx_id)%>%</th>
      <th></th>
      <td style="text-align:center"><%= max_aptc_that_can_be_applied_for_this_enrollment(hbx_id, @max_aptc)%></td>
      <th></th>
      <th>Applied APTC &nbsp;&nbsp;</th>
      <th><%= text_field_tag "#{"aptc_applied"+"_"+hbx_id}", @current_aptc_applied_hash[hbx_id], placeholder: 'APTC Applied', class: 'form-control', size: '8px', onkeyup: "APTCModule.computePercentageAndSliderRatio('#{hbx_id}', this.value, #{@max_aptc} )", onchange: "APTCModule.calculateAvailableAPTC('#{hbx_id}')"%></th>
    </tr>
   </head> 
  <tr>
  <tr>
  </table>  
</div>