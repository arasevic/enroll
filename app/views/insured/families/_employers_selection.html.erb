<%= form_tag family_account_path, method: :get do %>
  <div id="employers" class='row no-buffer'>
    <h3>Employers</h3>
    <div class="n-radio-group">
      <% @person.active_employee_roles.each do |employee_role| %>
        <div class="n-radio-row">
          <label class="n-radio" for="employee_role_<%= employee_role.id %>">
            <%= radio_button_tag 'employee_role_id', employee_role.id, @employee_role.id == employee_role.id, id: "employee_role_#{employee_role.id}", class: 'n-radio' %>
            <span class="n-radio">
            </span>
            <%= employee_role.employer_profile.legal_name %>
          </label>
        </div>
      <% end %>
    </div>
  </div>
  <%= submit_tag 'Submit', class: "btn btn-default pull-right" %>
<% end %>

<hr />

