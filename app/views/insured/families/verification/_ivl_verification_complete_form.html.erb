<% if current_user && current_user.has_hbx_staff_role? %>
    <%= link_to "#verif-#{person.id}", { 'data-toggle' => 'collapse', 'aria-expanded' => false, 'aria-controls' => "verif-#{person.id}" } do %>
        <%= button_tag "Verify", class:"btn btn-danger btn-xs" %>
    <% end %>

<% else %>
    <% link_to "Send for review", "#", class:"btn btn-success btn-xs" %>
<% end %>