<span class="label label-<%=verification_type_class(v_type, person)%>"><%= verification_type_status(v_type, person).titleize %></span>

<% if current_user && current_user.has_hbx_staff_role? %>
&nbsp;
    <div class="popover-markup" style="display: inline;">
      <%= link_to "Verify <i class='fa fa-check-circle-o' aria-hidden='true'></i>".html_safe, "#", class:"btn btn-success btn-xs trigger btn-br" %>

    <!-- Admin comment form -->
      <div class="head hide">Provide Verification Reason:</div>
      <div class="content hide">
        <%= form_tag update_verification_type_documents_path, multipart: true, method: :put do %>
            <ul id="verification-reason">
              <%= hidden_field_tag 'person_id', person.id  %>
              <%= hidden_field_tag 'verification_type', v_type  %>
              <div class="n-radio-group">
                <div class="n-radio-row">
                  <label class="n-radio module verif-type" for="citizenship_document_in_Enroll_app">
                    <%= radio_button_tag 'citizenship', 'document_in_Enroll_app', true, class: 'n-radio' %>
                    <span class="n-radio">
                    </span>
                    Document in EnrollApp
                  </label>
                </div>
                <div class="n-radio-row">
                  <label class="n-radio module verif-type" for="citizenship_document_in_DIMS">
                    <%= radio_button_tag 'citizenship', 'document_in_DIMS', false, class: 'n-radio' %>
                    <span class="n-radio">
                    </span>
                    Document in DIMS
                  </label>
                </div>
                <div class="n-radio-row">
                  <label class="n-radio module verif-type" for="citizenship_SAVE_system">
                    <%= radio_button_tag 'citizenship', 'SAVE system', false, class: 'n-radio' %>
                    <span class="n-radio">
                    </span>
                    SAVE system
                  </label>
                </div>
                <div class="n-radio-row">
                  <label class="n-radio module verif-type" for="citizenship_e-verified_in_Curam">
                    <%= radio_button_tag 'citizenship', 'e-verified_in_Curam', false, class: 'n-radio' %>
                    <span class="n-radio">
                    </span>
                    E-Verified in Curam
                  </label>
                </div>
              </div>
              <div class="text-center">
                <%= submit_tag "Complete", class: "btn btn-primary btn-small btn-br" %>
              </div>
            </ul>
        <% end %>
      </div>
    </div>
    <!-- >>>>>> admin comment form -->

<% else %>
    <% #link_to "Send for review", "#", class:"btn btn-success btn-xs" %>
<% end %>

<script type="text/javascript" charset="utf-8">
  $('.popover-markup>.trigger').popover({
    html: true,
    title: function () {
      return $(this).parent().find('.head').html();
    },
    content: function () {
      return $(this).parent().find('.content').html();
    },
    animation: true
  });
</script>
